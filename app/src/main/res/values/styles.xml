<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    Button (individual component) -->
    <style name="Widget.TourAQP.Button" parent="Widget.Material3.Button">
        <item name="android:width">180dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.TourAQP.InputAuth" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="expandedHintEnabled">true</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="Widget.TourAQP.BottomNav" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/md_theme_primary</item>
        <item name="itemIconTint">@color/md_theme_onPrimary</item>
        <item name="itemTextColor">@color/md_theme_onPrimary</item>
        <item name="android:background">@drawable/shape_bottom_nav</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.TourAQP.BottomNav.ActiveIndicator</item>
    </style>

    <style name="Widget.TourAQP.BottomNav.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/md_theme_onPrimaryFixedVariant</item>
    </style>

</resources>